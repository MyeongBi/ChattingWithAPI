<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#F0DDDD"/> <!-- 버튼의 배경색을 지정합니다. -->
            <corners android:radius="8dp"/> <!-- 버튼의 테두리를 라운드 처리합니다. -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/> <!-- 버튼의 패딩 값을 지정합니다. -->
            <stroke android:color="#A0A0A0" android:width="1dp"/> <!-- 버튼의 테두리 색상과 두께를 지정합니다. -->
        </shape>
    </item>
</selector>
